<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Hocphan" table="hocphan" schema="dean">
        <composite-id name="khoaChinh" class="pojo.HocphanPK">
            <key-property name="maHocPhan">
                <column name="maHocPhan" sql-type="char(10)" length="10"/>
            </key-property>
            <key-property name="hocKi">
                <column name="hocKi" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="namHoc">
                <column name="namHoc" sql-type="varchar(10)" length="10"/>
            </key-property>
        </composite-id>
        <property name="tenHocPhan">
            <column name="tenHocPhan" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="soSlotToiDa">
            <column name="soSlotToiDa" sql-type="int" not-null="true"/>
        </property>
        <property name="ngayHoc">
            <column name="ngayHoc" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="caHoc">
            <column name="caHoc" sql-type="char(11)" length="11" not-null="true"/>
        </property>
        <property name="phongHoc">
            <column name="phongHoc" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="soTc">
            <column name="soTC" sql-type="int" not-null="true"/>
        </property>
        <property name="giaoVienLyThuyet">
            <column name="giaoVienLyThuyet" sql-type="char(8)" length="8" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>