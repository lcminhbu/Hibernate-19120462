<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Lop" table="lop" schema="dean">
        <composite-id name="khoaChinh" class="pojo.LopPK">
            <key-property name="maLop">
                <column name="maLop" sql-type="char(8)" length="8"/>
            </key-property>
            <key-property name="hocKi">
                <column name="hocKi" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="namHoc">
                <column name="namHoc" sql-type="varchar(10)" length="10"/>
            </key-property>
        </composite-id>
        <property name="soSv">
            <column name="soSV" sql-type="int" not-null="true"/>
        </property>
        <property name="soSvNu">
            <column name="soSVNu" sql-type="int" not-null="true"/>
        </property>
        <property name="soSvNam">
            <column name="soSVNam" sql-type="int" not-null="true"/>
        </property>
        <property name="tenLop">
            <column name="tenLop" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>