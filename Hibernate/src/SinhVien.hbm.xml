<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Sinhvien" table="sinhvien" schema="dean">
        <composite-id name="khoaChinh" class="pojo.SinhvienPK">
            <key-property name="maSinhVien">
                <column name="maSinhVien" sql-type="char(8)" length="8"/>
            </key-property>
            <key-property name="cmnd">
                <column name="cmnd" sql-type="char(12)" length="12"/>
            </key-property>
        </composite-id>
        <property name="hoTen">
            <column name="hoTen" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="diaChi">
            <column name="diaChi" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="ngaySinh">
            <column name="ngaySinh" sql-type="datetime" not-null="true"/>
        </property>
        <property name="gioi">
            <column name="gioi" sql-type="varchar(3)" length="3" not-null="true"/>
        </property>
        <property name="khoaHoc">
            <column name="khoaHoc" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>