<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Hocki" table="hocki" schema="dean">
        <composite-id name="khoaChinh" class="pojo.HockiPK">
            <key-property name="tenHocKi">
                <column name="tenHocKi" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="namHoc">
                <column name="namHoc" sql-type="varchar(10)" length="10"/>
            </key-property>
        </composite-id>
        <property name="ngayBatDau">
            <column name="ngayBatDau" sql-type="datetime" not-null="true"/>
        </property>
        <property name="ngayKetThuc">
            <column name="ngayKetThuc" sql-type="datetime" not-null="true"/>
        </property>
        <property name="hocKiHienTai">
            <column name="hocKiHienTai" sql-type="tinyint(1)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>