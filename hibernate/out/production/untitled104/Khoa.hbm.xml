<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Khoa" table="khoa" schema="hibernate">
        <id name="makhoa">
            <column name="makhoa" sql-type="varchar(4)" length="4"/>
        </id>
        <property name="tenkhoa">
            <column name="tenkhoa" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>