<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.SinhvienLop" table="sinhvien_lop" schema="dean">
        <composite-id mapped="true" class="pojo.SinhvienLopPK">
            <key-property name="cmnd">
                <column name="cmnd" sql-type="char(12)" length="12"/>
            </key-property>
            <key-property name="maLop">
                <column name="maLop" sql-type="char(8)" length="8"/>
            </key-property>
            <key-property name="hocKi">
                <column name="hocKi" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="namHoc">
                <column name="namHoc" sql-type="varchar(10)" length="10"/>
            </key-property>
        </composite-id>
        <property name="maSinhVien">
            <column name="maSinhVien" sql-type="char(8)" length="8" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>